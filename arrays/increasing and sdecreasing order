class Solution {
  public:
    // Function to sort the array in a custom pattern.
    vector<int> customSort(vector<int>& arr) {
        
         int n = arr.size();
        if (n % 2 != 0) {
            return arr;
        }
        int half = n / 2;
        sort(arr.begin(), arr.begin() + half);
        sort(arr.begin() + half, arr.end());
        reverse(arr.begin() + half, arr.end());
        return arr;
        // your code
    }
};
