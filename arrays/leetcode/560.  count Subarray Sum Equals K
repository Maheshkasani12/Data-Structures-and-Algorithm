//using prfix sum


class Solution {
public:
    int subarraySum(vector<int>& nums, int k) {
        int prefsum = 0;
        int count =0;
        map<int,int>mp;
        mp[0]=1;

        for(int i=0;i<nums.size();i++){
            prefsum+=nums[i];
            int remove = prefsum - k;
            count += mp[remove];
            mp[prefsum] += 1;
        }
        return count;
    }

   
};







