class Solution {
public:
    bool isValid(string s) {
        stack<char> st;

        for (char c : s) {

            // opening brackets -> push
            if (c == '(' || c == '{' || c == '[') {
                st.push(c);
            } 
            else {
                // if closing bracket but stack empty -> invalid
                if (st.empty()) return false;

                char top = st.top();
                st.pop();

                // mismatch check
                if ((c == ')' && top != '(') ||
                    (c == '}' && top != '{') ||
                    (c == ']' && top != '[')) {
                    return false;
                }
            }
        }

        // valid only if stack empty
        return st.empty();
    }
};
