/* Structure of Node
class Node {
  public:
    int data;
    Node *next;
    Node *prev;

    Node(int val) {
        data = val;
        this->next = NULL;
        this->prev = NULL;
    }
};
*/

class Solution {
  public:
    Node* delPos(Node* head, int x) {
        // code here
        
        Node *temp  = head;
        int count = 0;
        
        while(temp != NULL){
            count++;
            
            if(count == x){
                break;
            }
            
            temp=temp->next;
            
            
        }
        
        Node *back = temp->prev;
        Node *front = temp->next;
        
        if(front == NULL && back == NULL){
            delete(head);
            return NULL;
        }
        
        
        //delete head
        else if(back == NULL){
            if(head == NULL && head->next ==NULL){
                return NULL;
            }
            Node *temp =head;
            head = head->next;
            head->prev = NULL;
            temp->next = NULL;
            return head;
            
        }
        
        //delete tail
        else if(front == NULL){
            
            if(head == NULL && head->next ==NULL){
                return NULL;
            }
            Node *temp =head;
            
            while(temp->next != NULL){
                temp = temp->next;
            }
            
            Node *curr = temp->prev;
            curr->next =NULL;
            temp->prev = NULL;
            delete(temp);
            return head;
            
            
            
        }
        
        back->next = front;
        front->prev = back;
        temp->next = temp->prev =NULL;
        delete(temp);
        return head;
    }
};
